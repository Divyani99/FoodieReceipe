<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngreSwissRoll">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anormal"
        android:textColor="#FFEB3B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:text="FOR CAKE BATTER:"/>


    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/anormal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="1/2 cup (120 ml) milk\n
1/4 cup (60 ml) oil\n
1 tsp vinegar\n
1 tsp vanilla extract\n
3/4 cup (120 gm) maida / plain flour\n
1/4 cup (20 gm) cocoa powder\n
1/2 cup (55 gm) powdered sugar\n
1/2 tsp baking powder\n
1/4 tsp baking soda\n
1/4 tsp salt\n
2 tbsp milk\n
" />

    <TextView
        android:id="@+id/txt3"
        android:layout_below="@id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anormal"
        android:textColor="#FFEB3B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:text="FOR FROSTING:"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:fontFamily="@font/anormal"
        android:text="
1 cup whipping cream, 35% milkfat\n
2 tbsp icing sugar\n
1 tsp vanilla extract\n


"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />    <TextView
        android:id="@+id/txt5"
        android:layout_below="@id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anormal"
        android:textColor="#FFEB3B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:text="OTHER INGREDIENTS:"/>

    <TextView
        android:id="@+id/txt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt5"
        android:fontFamily="@font/anormal"
        android:text="
oil, for greasing pan\n
powdered sugar, for dusting


"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>