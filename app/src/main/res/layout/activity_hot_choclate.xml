<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotChoclate">

        <TextView
            android:id="@+id/wi"
            android:layout_width="134dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="459dp"
            android:fontFamily="@font/anormal"
            android:text="Time :5 Min"
            android:textColor="#090808"
            android:textSize="18sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/hcd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="207dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="371dp"
        android:background="@drawable/grad"
        android:fontFamily="@font/autour_one"
        android:text="Direction "
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hci"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="367dp"
        android:background="@drawable/grad"
        android:fontFamily="@font/autour_one"
        android:text="Ingredient"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="355dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="700dp"
      >


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerhotchoc"
                android:layout_width="wrap_content"
                android:layout_height="1500dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-91dp" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hotchoco" />


</RelativeLayout>

