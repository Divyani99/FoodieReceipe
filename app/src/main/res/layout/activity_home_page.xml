<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relative">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="-2dp"
        app:itemBackground="@color/colorAccent"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:scaleType="centerCrop"

                android:src="@drawable/dosa" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="94dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="58dp"
                android:fontFamily="@font/aclonica"
                android:text="Breakfast"
                android:textAlignment="center"
                android:textColor="#F1EEEE"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_below="@id/img1"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lunchhh" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/img2"
                android:layout_marginTop="-4dp"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dinnerrr" />


            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/img3"
                android:layout_marginTop="-3dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/souppic" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/img4"
                android:layout_marginStart="15dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dessertt" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="271dp"
                android:layout_marginEnd="105dp"
                android:fontFamily="@font/aclonica"
                android:text="Lunch"
                android:textAlignment="center"
                android:textColor="#F1EEEE"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="330dp"
                android:layout_height="69dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="117dp"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="463dp"
                android:layout_marginEnd="94dp"
                android:fontFamily="@font/aclonica"
                android:text="Dinner"
                android:textAlignment="center"
                android:textColor="#F1EEEE"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="302dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="660dp"
                android:layout_marginEnd="111dp"
                android:fontFamily="@font/aclonica"
                android:text="Soup"
                android:textAlignment="center"
                android:textColor="#F1EEEE"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="357dp"
                android:layout_height="74dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="857dp"
                android:layout_marginEnd="93dp"
                android:fontFamily="@font/aclonica"
                android:text="Dessert"
                android:textAlignment="center"
                android:textColor="#F1EEEE"
                android:textSize="35dp"
                android:textStyle="bold" />

</RelativeLayout>
    </ScrollView>

</FrameLayout>
