<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlooBhindi">

     <TextView
         android:id="@+id/abd"
         android:layout_width="120dp"
         android:layout_height="35dp"
         android:layout_alignParentEnd="true"
         android:layout_alignParentBottom="true"
         android:layout_marginEnd="107dp"
         android:layout_marginBottom="358dp"
         android:background="@drawable/grad3"
         android:fontFamily="@font/autour_one"
         android:text="Direction"
         android:textAlignment="center"
         android:textColor="#A4090303"
         android:textSize="15dp"
         android:textStyle="bold" />

    <TextView
        android:id="@+id/abi"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="358dp"
        android:background="@drawable/grad3"
        android:fontFamily="@font/autour_one"
        android:text="Ingredient"
        android:textAlignment="center"
        android:textColor="#A4070501"
        android:textColorHint="#FFC107"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/video"
        android:layout_width="89dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="361dp"
        android:background="@drawable/grad3"
        android:fontFamily="@font/autour_one"
        android:onClick="vid"
        android:text="Video"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPageraloobhindi"
                android:layout_width="match_parent"
                android:layout_height="670dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-150dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="168dp" />


        </RelativeLayout>
    </ScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/aloobhindi" />

</RelativeLayout>





