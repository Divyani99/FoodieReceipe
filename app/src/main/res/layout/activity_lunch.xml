<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#000000">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Foodie"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Lunch"
            android:textSize="24dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:onClick="kadhiclick"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="347dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="197dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kadhi Pakora"
                                android:textColor="#f22f11"

                                android:textSize="24dp">

                            </TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="122dp"
                                        android:layout_height="match_parent"
                                        android:text="Servings:3"
                                        android:textSize="17dp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time:- 1 hr 10 mins"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:src="@drawable/l1" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bhindiclick"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="197dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bhindi Tambuli"
                                android:textColor="#f22f11"
                                android:textSize="24dp"
                              >

                            </TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="122dp"
                                        android:layout_height="match_parent"
                                        android:text="Servings:3-4"
                                        android:textSize="17dp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time:-25 mins"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:src="@drawable/l2" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:onClick="cholebhatureclick"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="197dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chole Bhature"
                                android:textColor="#f22f11"
                                android:textSize="24dp"
                              >

                            </TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="122dp"
                                        android:layout_height="match_parent"
                                        android:text="Servings:2-3"
                                        android:textSize="17dp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time:-1 hr"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:src="@drawable/l3" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp"
                android:onClick="cholemasalaclick">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="103dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="198dp"
                            android:layout_height="90dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chole Masala"
                                android:textColor="#f22f11"
                                android:textSize="24dp">

                            </TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="122dp"
                                        android:layout_height="match_parent"
                                        android:text="Servings:2-3"
                                        android:textSize="17dp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time:-50 mins"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:src="@drawable/l4" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="soyachapclick"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="345dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="89dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Soya Chaap Curry"
                                android:textColor="#f22f11"
                                android:textSize="24dp">

                            </TextView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="122dp"
                                        android:layout_height="match_parent"
                                        android:text="Servings:4"
                                        android:textSize="17dp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time:-50 mins"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/l5" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

